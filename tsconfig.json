{
  "compilerOptions": {
    "target": "es2020", //
    "module": "commonjs", // Or "esnext" if you're using modules
    "outDir": "./dist", // Output directory for compiled JavaScript
    "rootDir": "./src", // Root directory for your TypeScript source files
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Important for compatibility with CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "types.d.ts"],
  "exclude": ["node_modules"]
}
